<project>
	<parent>
		<groupId>org.jdom</groupId>
		<artifactId>jdom-parent</artifactId>
		<version>3.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>jdom-xpath-java5</artifactId>
	<packaging>jar</packaging>

	<name>JDOM XPath - Java 5 implementation</name>
	<version>3.0-SNAPSHOT</version>

	<build>
		<plugins>
			<plugin>
				<groupId>consulo.maven</groupId>
				<artifactId>java9-maven-plugin</artifactId>
				<version>1.0-SNAPSHOT</version>
				<extensions>true</extensions>
				<configuration>
					<module>
						<name>org.jdom2.xpath.java5</name>
						<requires>
							<require>
								<module>org.jdom2</module>
							</require>
							<require>
								<module>org.jdom2.to.dom</module>
							</require>
							<require>
								<module>java.xml</module>
							</require>
						</requires>
						<exports>
							<export>
								<package>org.jdom2.contrib.xpath.java</package>
							</export>
						</exports>
					</module>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>jdom-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>jdom-core-test</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>jdom-to-dom</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
</project>