	<developers>
		<developer>
			<id>hunterhacker</id>
			<name>Jason Hunter</name>
			<email>jhunter@servlets.com</email>
		</developer>
		<developer>
			<id>rolfl</id>
			<name>Rolf Lear</name>
			<email>jdom@tuis.net</email>
		</developer>
	</developers>

	<build>
		<plugins>
			<plugin>
				<groupId>consulo.maven</groupId>
				<artifactId>java9-maven-plugin</artifactId>
				<version>1.0-SNAPSHOT</version>
				<extensions>true</extensions>
				<configuration>
					<module>
						<open>true</open>
						<name>org.jdom2</name>
						<requires>
							<require>
								<module>java.xml</module>
							</require>
						</requires>
						<exports>
							<export>
								<package>org.jdom2</package>
							</export>
							<export>
								<package>org.jdom2.adapters</package>
							</export>
							<export>
								<package>org.jdom2.filter</package>
							</export>
							<export>
								<package>org.jdom2.input</package>
							</export>
							<export>
								<package>org.jdom2.located</package>
							</export>
							<export>
								<package>org.jdom2.output</package>
							</export>
							<export>
								<package>org.jdom2.transform</package>
							</export>
							<export>
								<package>org.jdom2.util</package>
							</export>
							<export>
								<package>org.jdom2.xpath</package>
							</export>
							<export>
								<package>org.jdom2.xpath.util</package>
							</export>
							<export>
								<package>org.jdom2.internal</package>
							</export>
						</exports>
					</module>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>